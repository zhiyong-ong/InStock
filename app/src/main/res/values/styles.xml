<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyDarkToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/maroon</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>

    </style>

    <style name="TableText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#091232</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>

    </style>

    <style name="MaterialSearchViewStyle">

        <!-- Background for the search bar -->
        <item name="searchBackground">@color/whitish</item>

        <!-- Change voice icon -->
        <item name="searchVoiceIcon">@drawable/ic_mic</item>

        <!-- Change clear text icon -->
        <item name="searchCloseIcon">@drawable/ic_clear</item>

        <!-- Change up icon -->
        <item name="searchBackIcon">@drawable/ic_arrow_back</item>

        <!-- Change background for the suggestions list view -->
        <item name="searchSuggestionBackground">@color/whitish</item>
        <item name="searchSuggestionIcon">@drawable/ic_search_black</item>
        <!-- Change text color for edit text. This will also be the color of the cursor -->
        <item name="android:textColor">@android:color/black</item>

        <!-- Change hint text color for edit text -->
        <item name="android:textColorHint">@color/lightGrey</item>

        <!-- Hint for edit text -->
        <item name="android:hint">Search ... </item>
    </style>
</resources>
