<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Add New Item"
        android:textSize="16dip"
        android:onClick="sendNewItemIntent"
        android:id="@+id/newItemButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="181dp" />

    <Button
        android:layout_width="300dp"
        android:textSize="16dip"
        android:layout_height="wrap_content"
        android:onClick="sendNewKitIntent"
        android:text="Build New Kit"
        android:id="@+id/buildKitButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="View All Items"
        android:textSize="16dip"
        android:id="@+id/viewItemButton"
        android:onClick="viewAllIntent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp" />


</RelativeLayout>